<style>
  iframe {
    width: 100%;
    height: 80vh;
  }
</style>

<section class="max-w-7xl mx-auto px-8 py-10">

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Список файлов -->
    <div class="bg-gray-800 text-white rounded-xl shadow-lg p-4 max-h-[500px] overflow-y-auto w-full lg:w-1/3">
      <ul class="space-y-2 text-sm">
        {{#each files}}
          <li>
            <a id="{{this}}"
               href="#"
               class="block px-4 py-2 rounded hover:bg-gray-700 transition collection-item break-words leading-snug">
              {{this}}
            </a>
          </li>
        {{/each}}
      </ul>
    </div>

    <!-- Просмотр документа -->
    <div class="w-full lg:w-3/3">
      <iframe id="frame"
              src=""
              class="rounded-xl shadow-lg border border-gray-700 bg-white dark:bg-gray-900 text-black dark:text-white">
        не удалось показать документ
      </iframe>
    </div>
  </div>
</section>

<script>
  $(document).ready(function () {
    $(".collection-item").on("click", function (e) {
      e.preventDefault();
      const filename = $(this).attr("id");
      $("#frame").attr("src", "docs/" + filename);
    });
  });
</script>
