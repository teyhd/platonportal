<style>
  .l{
    height: 400px;  
  }
  .h{
    height: 300px;
  }
.bl{
 
}
 header, .main, footer {
      padding-left: 200px;
    }

    @media only screen and (max-width : 992px) {
      header, .main, footer {
        padding-left: 0;
      }
    }
    .tnews{
          line-height: 20pt;
           font-size: 14pt;
    }
    .card{
      min-width: 150px;
    }
</style>


<br>
<div class="main">
  <div class="row">
    {{#each menu}}
      <div class="bl col s6 m4 h4 l3">
        <a href="{{this.link}}" class="black-text text-darken-3">
          <div class="card hoverable">
            <div class="card-image">
              <img src="img/{{this.pic}}" alt="{{this.text}}">
            </div>
            <div class="card-content center-align">
              <p>{{{this.text}}}</p>
            </div>
          </div>
        </a>
      </div>
    {{/each}}
  </div>
</div>

<ul id="slide-out" class="sidenav sidenav-fixed">
  <li>
    <nav class="cyan darken-1">
      <div class="nav-wrapper">
        <a href="/" class="brand-logo center hide-on-med-and-up flow-text">Информация</a>
        <a href="/" class="brand-logo center hide-on-small-only">Информация</a>
      </div>
    </nav>
  </li>

  <li>
    <ul class="collapsible">
      {{#each info}}
        <li>
          <div class="collapsible-header"><i class="material-icons">info_outline</i>{{title}}</div>
          <div class="collapsible-body center-align tnews">{{{content}}}</div>
        </li>
      {{/each}}
    </ul>
  </li>

  <li>
    {{#if auth}}
      <a href="/logout"><i class="material-icons">account_circle</i>Выход</a>
    {{else}}
      <a class="modal-trigger" href="#modal1" name="login"><i class="material-icons">account_circle</i>Вход</a>
    {{/if}}
  </li>
</ul>
