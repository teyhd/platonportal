<!doctype html>
<html lang="ru" class="h-full">
<head>
  <meta charset="utf-8" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>{{title}}</title>
</head>
<body class="h-full bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
  <!-- Header -->
  <header class="fixed inset-x-0 top-0 z-10 flex items-center h-14 px-4 bg-white/70 backdrop-blur dark:bg-gray-800/70">
    <h1 class="text-xl font-semibold mr-6">{{title}}</h1>
    <button id="theme" class="ml-4 p-2 rounded-md hover:bg-gray-200 dark:hover:bg-gray-700">üåû</button>
    <img src="/avatar.jpg" alt="me" class="ml-3 w-8 h-8 rounded-full" />
  </header>

  <main class="pt-20 px-4 max-w-7xl mx-auto space-y-8">
    <!-- Services -->
    <section>
      <h2 class="mb-4 text-lg font-medium">–°–µ—Ä–≤–∏—Å—ã</h2>
      <div class="grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
        {{#each menu}}
          <a href="{{this.link}}" class="p-4 rounded-lg bg-white shadow-sm hover:shadow-md transition dark:bg-gray-800">
            <div class="flex items-center gap-3 mb-1">
              <img src="/img/{{this.pic}}" class="w-6 h-6" alt="{{this.text}}">
              <span class="font-medium">{{this.text}}</span>
            </div>
          </a>
        {{/each}}
      </div>
    </section>

    <!-- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è -->
    {{#if info.length}}
    <section>
      <h2 class="mb-4 text-lg font-medium">–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è</h2>
      <div class="grid gap-4 md:grid-cols-2">
        {{#each info}}
          <div class="p-4 rounded-lg bg-white dark:bg-gray-800 shadow-sm">
            <h3 class="font-semibold text-base mb-2">{{this.title}}</h3>
            <div class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
              {{{this.content}}}
            </div>
          </div>
        {{/each}}
      </div>
    </section>
    {{/if}}
  </main>

  <footer class="mt-16 py-6 text-center text-sm text-gray-500 dark:text-gray-400">
    ¬© 2025 Harmony Edu Intranet ¬∑ v0.1
  </footer>
</body>
</html>
